@{
    ViewData["Title"] = "Pagina Empleado";
}
@model examenDepEmpEFCrudMVC.ViewModels.EmpVM

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-@TempData["Tipo"] alert-dismissible fade show shadow-sm" role="alert">
        <strong>Aviso:</strong> @TempData["Mensaje"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container mt-4">
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h2 class="card-title h4">Registrar Nuevo Empleado</h2>
            <hr />
            <form asp-action="Guardar" method="post" class="row g-3">
                <div class="col-md-5">
                    <label class="form-label fw-bold">Nombre del Empleado</label>
                    <input asp-for="RefModeloEmpleado.NombreEmpleado" class="form-control" placeholder="Ej. Juan Pérez" required />
                </div>
                <div class="col-md-4">
                    <label class="form-label fw-bold">Departamento</label>
                    <select asp-for="RefModeloEmpleado.IdDepartamento" class="form-select"
                            asp-items="@(new SelectList(Model.ListaDepartamentos, "IdDepartamento", "NombreDepartamento"))" required>
                        <option value="">-- Selecciona un departamento --</option>
                    </select>
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-success w-100">Guardar Empleado</button>
                </div>
            </form>
        </div>
    </div>

    <div class="row mb-3 align-items-end">
        <div class="col-md-4">
            <label class="form-label fw-bold">Filtrar por Departamento:</label>
            <select class="form-select shadow-sm" id="cboDepartamento"
                    onchange="location.href='?id=' + this.value">
                <option value="0">Todos los departamentos</option>
                @foreach (var dep in Model.ListaDepartamentos)
                {
                    <option value="@dep.IdDepartamento" selected="@(dep.IdDepartamento == ViewBag.IdSeleccionado)">
                        @dep.NombreDepartamento
                    </option>
                }
            </select>
        </div>
        <div class="col-md-2">
            <a asp-action="Index" class="btn btn-outline-secondary w-100">Limpiar Filtro</a>
        </div>
    </div>

    <div class="table-responsive shadow-sm rounded">
        <table class="table table-hover table-striped border">
            <thead class="table-dark">
                <tr>
                    <th>IdEmpleado</th>
                    <th>Nombre Empleado</th>
                    <th>Departamento</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody class="align-middle">
                @if (Model.ListaEmpleados != null && Model.ListaEmpleados.Any())
                {
                    @foreach (var item in Model.ListaEmpleados)
                    {
                        <tr>
                            <td>@item.IdEmpleado</td>
                            <td>@item.NombreEmpleado</td>
                            <td>
                                <span class="badge bg-light text-dark border">
                                    @item.IdDepartamentoNavigation?.NombreDepartamento
                                </span>
                            </td>
                            <td class="text-center">
                                <div class="d-flex justify-content-center gap-2">
                                    <a asp-action="Editar" asp-route-id="@item.IdEmpleado" class="btn btn-warning btn-sm">Editar</a>
                                    <form asp-action="Eliminar" method="post" onsubmit="return confirm('¿Seguro que deseas eliminar a @item.NombreEmpleado?');">
                                        <input type="hidden" name="id" value="@item.IdEmpleado" />
                                        <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center text-muted py-4">
                            <p class="mb-0">No hay empleados para mostrar en la tabla.</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>